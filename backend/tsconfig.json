{
  "compilerOptions": {
    "target": "es2020",
    "module": "es2022",
    "moduleResolution": "nodenext",
    "rootDir": "./src",
    "outDir": "./dist",
    "removeComments": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "strictNullChecks": true,
    "skipLibCheck": true
  }
}
